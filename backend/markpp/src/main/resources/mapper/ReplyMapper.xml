<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.buaa.markpp.dao.ReplyDao">
    <select id="selectByCmtId" parameterType="int" resultType="Reply">
        select * from reply where comment_id = #{commentId};
    </select>
    <select id="selectById" parameterType="int" resultType="Reply">
        select * from reply where reply_id = #{replyId};
    </select>
    <insert id="add" parameterType="Reply">
        insert into reply(comment_id,
                          <if test="replyToUserId > 0">reply_to_user_id,</if>
                          replier_id, time, content)
        values (#{commentId},
                <if test="replyToUserId > 0">#{replyToUserId}, </if>
                 #{replierId}, now(), #{content})
    </insert>
</mapper>
