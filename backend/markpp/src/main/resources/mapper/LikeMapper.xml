<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.buaa.markpp.dao.LikeDao">
    <select id="sum" resultType="int" parameterType="int">
        select coalesce(sum(value), 0) from `like` where post_id = #{postId};
    </select>
    <select id="sumByAuthor" resultType="int" parameterType="int">
        select coalesce(sum(value), 0) from `like` join post p on p.post_id = `like`.post_id where author_id = #{accountId};
    </select>
    <insert id="add" parameterType="Like" keyProperty="likeId" useGeneratedKeys="true">
        insert into `like`(voter_id, post_id, value) values (#{voterId}, #{postId}, #{value});
    </insert>
    <select id="selectByPostAndUser" resultType="Like">
        select * from `like` where post_id = #{postId} and voter_id = #{accountId};
    </select>
    <delete id="delete" parameterType="int">
        delete from `like` where like_id = #{likeId};
    </delete>
</mapper>